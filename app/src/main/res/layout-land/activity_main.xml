<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ActivityAndFragments.MainActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/list_fragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:name="com.example.tasks.ActivityAndFragments.NotesList"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_add_note"
        app:layout_constraintEnd_toStartOf="@+id/details_fragment" />

    <Button
        android:id="@+id/btn_add_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin16"
        android:fontFamily="@font/montserrat_alternates"
        app:layout_constraintStart_toStartOf="@id/list_fragment"
        app:layout_constraintEnd_toEndOf="@id/list_fragment"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/add_note" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/details_fragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/list_fragment"
        tools:background="@color/teal_200" />

</androidx.constraintlayout.widget.ConstraintLayout>